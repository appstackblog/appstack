Options -Indexes
# Always try maintenance page first
DirectoryIndex maintenance.html index.php index.html

RewriteEngine On

# Force root to maintenance.html when it exists
RewriteCond %{REQUEST_URI} ^/$
RewriteCond %{DOCUMENT_ROOT}/maintenance.html -f
RewriteRule ^$ /maintenance.html [L]

# If you still want /blog as fallback when not in maintenance, keep this
RewriteCond %{REQUEST_URI} ^/$
RewriteCond %{DOCUMENT_ROOT}/blog/index.php -f
RewriteRule ^$ /blog/index.php [L]
